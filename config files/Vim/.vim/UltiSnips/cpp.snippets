snippet print_debuggers "Macros used for debugging code using print statements" b
#define here cout<<"here\n"
#define display(name) cout<<#name<<": ";for(auto it: name){cout<<it<<" ";}cout<<"\n"
#define display_2d(name, x, y) for(int i=0;i<x;++i){for(int j=0;j<y;++j){cout<<name[i][j]<<" ";}cout<<'\n';}
#define display_pair(point) cout<<#point<<": "<<point.first<<","<<point.second
#define what_is_here(name) cout<<#name<<": "<<name<<"  "
endsnippet

snippet commacs "All the commonly used macros are made available" b
#define all(name) name.begin(),name.end()
#define nl cout<<'\n'
#define free_cin_cout cin.sync_with_stdio(false);cout.sync_with_stdio(false)
#define fastIO ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define ll long long
#define INF 1e9
#define take_loop_input_in(name,size) for(int i=0;i<size;++i){cin>>name[i];}
#define take_indexed_loop_input(name,size) for(int i=1;i<size+1;++i){int x;cin>>x;name.push_back(make_pair(x,i));}
